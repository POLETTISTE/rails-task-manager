<h1>My tasks</h1>

<ul id="tasks">
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
       <i class="fa fa-check-square-o"></i>
      <% else %>
       <i class="fa fa-square-o"></i>
      <% end %>
      <%= link_to task.title.upcase!, task_path(task.id) %>
      <%= link_to task_path(task.id), method: :delete, data: { confirm: "Are you really sure to delete #{task.title} ?? ğŸ˜±" } do %>
        <i class="fa fa-trash-o" aria-hidden="true"></i>
      <% end %>
    </li>
  <% end %>
</ul>

<hr>

<%= link_to new_task_path do %>
  <i class="fa fa-plus"></i> Add a new task
<% end %>
