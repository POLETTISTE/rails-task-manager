<h1>LIST OF TASKS :</h1>

<h2>TO DO</h2>
  <div class="to-do">
    <ul>
      <% @tasks.each do |task| %>
        <li>
          <% unless task.completed %>
            <i class="fa fa-check-square"></i>
            <%= task.title  %>
          <% end %>
          <%= link_to task.title.upcase!, task_path(task.id) %>
          <%= link_to task_path(task.id), method: :delete, data: { confirm: "Are you really sure to delete #{task.title} ?? ðŸ˜±" } do %>
          ----
            <i class="fa fa-trash" aria-hidden="true"></i>
         <% end %>
        </li>
      <% end %>
    </ul>
</div>

