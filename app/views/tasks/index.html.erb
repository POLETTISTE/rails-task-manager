

<h1 class="border border-success bg-success text-center mb-5 p-3">TO DO LIST</h1>

<div class="container text-center d-flex flex-column justify-content-around">
  <div class="todo-list text-left mb-5 ">
    <h2 class="text-center m-3">A FAIRE</h2>
    <ul>
      <% @tasks.each do |task| %>
      <li>
        <% unless task.completed %>
        <i class="far fa-square"></i>
        <%= link_to task.title.upcase, task_path(task) %>

        <%= link_to edit_task_path(task) do%>
        <i class="fa fa-book-open text-warning"></i>
        <% end %>

        <%= link_to task_path(task), method: :delete, data: { confirm: "Are you really sure to delete #{task.title} ?? ðŸ˜±" } do %>
        <i class="fa fa-trash text-danger" aria-hidden="true"></i>
        <% end %>

        <% end %>
      </li>
      <% end %>
    </ul>
  </div>


  <div class="todo-list text-left">
   <h2 class="text-center m-3">FINIES</h2>
   <ul>
    <% @tasks.each do |task| %>
