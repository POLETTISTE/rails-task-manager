<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title, 'Titre'%>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details, 'DÃ©tails' %>
    <%= f.text_area :details, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :deadline, 'EchÃ©ance' %>
    <%= f.date_field :deadline , as: :date, :id => "datepicker", class: 'form-control' %>
  </div>

  <% unless f.object.new_record? %>
    <div class="checkbox">
      <label>
        <%= f.check_box :completed %> Fait !
      </label>
