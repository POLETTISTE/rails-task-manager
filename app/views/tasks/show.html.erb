
<h1><%= @task.title.upcase %></h1>

<p class="well"><%= @task.details %></p>
<p class="well"><%= @task.deadline %></p>



<% if @task.completed %>
  You have already done this task 😃
<% else %>
  You haven't done this task yet ☹️
<% end %>

<hr>
<%= link_to "Delete #{@task.title}",task_path(@task),method: :delete,  class: 'btn btn-danger', data: { confirm: "Are you sure?" } %>
<%= link_to tasks_path do %>
  <i class="fa fa-history"></i> Back to list
<% end %>



<%= link_to edit_task_path(@task.id), class: 'pull-right btn btn-default' do %>
  <i class="fa fa-pencil"></i> Edit this task
<% end %>
